<%= simple_form_for(dog) do |f| %>
      <%= f.input :name %>
      <%= f.input :breed %>
      <%= f.input :age %>
      <%= f.input :price %>
      <%= f.input :size, collection: %w[Extra-Small Small Medium Large Extra-Large] %>
      <%= f.input :description %>
      <%= f.button :submit %>
    <% end %>
