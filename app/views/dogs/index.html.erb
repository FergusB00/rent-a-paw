<div class="background-index">
  <div class="container">
    <!-- Search bar -->
      <div class="row justify-content-center">
        <div class="col-sm-8 my-3">
          <%= form_with url: dogs_path, method: :get, class: "search-form" do %>
            <div class="search-bar">
              <%= text_field_tag :query,
                    params[:query],
                    class: "search-input",
                    placeholder: "Type a keyword"
              %>
              <%= button_tag(type: 'submit', class: "search-button") do %>
                <i class="fas fa-search"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <div class="card-center d-flex">
      <% @dogs.each do |dog| %>
        <div class="">
          <div class="card-body" data-bs-toggle="tooltip" data-bs-placement="top"
            data-bs-custom-class="custom-tooltip"
            data-bs-title="🐾 Hi! I'm <%=dog.name%>🐶 I'm <%=dog.age%> years old and a size <%=dog.size%> 🐾">
            <%= link_to dog_path(dog) do %>
              <div class="card clickable-card bg-light border-0">
                <% if dog.photo.attached? %>
                  <%= cl_image_tag dog.photo.key, alt: "dog photo", class: "dog-photos" %>
                <% else %>
                  <%= image_tag dog.image_url, alt: "dog photo", class: "dog-photos" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
