<div class="background">
  <div class="container">
    <div class="container mt-4">
      <div class="row row-cols-2 g-4">
        <div class="list-group">
          <% @dogs.each do |dog| %>
              <div class="card-body">
                <%= link_to dog_path(dog) do %>
                  <div class="card clickable-card bg-light border-0">
                    <%= image_tag dog.photo, alt: "dog photo", class: "dog-photos" %>
                  </div>
                <% end %>
              </div>
          <% end %>
        </div>
      </div>
      <div class="text-center mt-4">
        <button class="btn btn-outline-warning me-2">&#9664;</button>
        <button class="btn btn-outline-warning">&#9654;</button>
      </div>
    </div>
  </div>
</div>
