<div class="background">
    <div class="container mt-4">
      <div class="row row-cols-2 g-4">
        <div class="list-group">
          <% @dogs.each do |dog| %>
            <div class="card-body" data-bs-toggle="tooltip" data-bs-placement="bottom"
              data-bs-custom-class="custom-tooltip"
              data-bs-title="🐾 Hi! I'm <%=dog.name%>🐶 I'm <%=dog.age%> years old and a size <%=dog.size%> 🐾">
              <%= link_to dog_path(dog) do %>
                <div class="card clickable-card bg-light border-0">
                  <% if dog.photo.attached? %>
                    <%= cl_image_tag dog.photo.key, alt: "dog photo", class: "dog-photos" %>
                  <% else %>
                    <%= image_tag dog.image_url, alt: "dog photo", class: "dog-photos" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center mt-4">
    <button class="btn btn-outline-warning me-2">&#9664;</button>
    <button class="btn btn-outline-warning">&#9654;</button>
  </div>
</div>
