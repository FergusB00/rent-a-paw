<div class="background">





  <div class="container mt-4">
    <!-- Search bar -->
      <div class="row justify-content-center">
        <div class="col-sm-8 my-3">
          <%= form_with url: dogs_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                  placeholder: "Type a keyword"
              %>
            <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

    <div class="card-center d-flex">
      <% @dogs.each do |dog| %>
        <div class="">
          <div class="card-body" data-bs-toggle="tooltip" data-bs-placement="top"
            data-bs-custom-class="custom-tooltip"
            data-bs-title="ğŸ¾ Hi! I'm <%=dog.name%>ğŸ¶ I'm <%=dog.age%> years old and a size <%=dog.size%> ğŸ¾">
            <%= link_to dog_path(dog) do %>
              <div class="card clickable-card bg-light border-0">
                <% if dog.photo.attached? %>
                  <%= cl_image_tag dog.photo.key, alt: "dog photo", class: "dog-photos" %>
                <% else %>
                  <%= image_tag dog.image_url, alt: "dog photo", class: "dog-photos" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
