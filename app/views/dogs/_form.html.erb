<%= simple_form_for dog, data: { insert_in_list_target: "form", action: "submit->insert-in-list#send" } do |f| %>
  <%= f.input :name, placeholder: "Enter the dog's name" %>
  <%= f.input :breed, placeholder: "Enter the dog's breed" %>
  <%= f.input :age, placeholder: "Enter the dog's age" %>
  <%= f.input :price, placeholder: "Enter the price per hour" %>
  <%= f.input :size, collection: %w[Extra-Small Small Medium Large Extra-Large], placeholder: "Select size" %>
  <%= f.input :description, placeholder: "Write a short description" %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit %>
<% end %>
